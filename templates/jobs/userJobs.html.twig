{% extends 'jobs/surfJobs.html.twig' %}

{% block pagination %}
    {% if nbPages|round > 1 %}
        <div class="container" style="display: flex;
    justify-content: center">
            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-center">
                    <li class="{% if currentPage > 1 %} page-item {% else %} page-item disabled {% endif %}">
                        <a class="page-link" href="{{ path('jobs.edit.user', { 'page' : currentPage - 1,'id':u.id }) }}" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                    {% for p in 1..nbPages|round() %}
                        <li class="{% if p == currentPage %} page-item active {% else %} page-item {% endif %}">
                            <a class="page-link" href="{{ path('jobs.edit.user', { 'page' : p,'id':u.id }) }}">{{ p }}</a>
                        </li>
                    {% endfor %}
                    <li class="{% if currentPage < nbPages %} page-item {% else %} page-item disabled {% endif %}">
                        <a class="page-link" href="{{ path('jobs.edit.user', { 'page' : currentPage + 1, 'id':u.id  }) }}" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    {% endif %}
{% endblock %}
{% block title %}
    mes offres
{% endblock %}

