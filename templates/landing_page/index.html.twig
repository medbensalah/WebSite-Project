{% extends 'base.html.twig' %}

{% block body %}
    <!-- Slideshow container -->
    <div class="slideshow-container">
        {% for categorie in categories %}
            <div class="mySlides fade">
                <div class="numbertext">{{ loop.index }} / {{ loop.length }}</div>
                <a href="#">
                    <img src="{{ asset(categorie.img) }}" style="width: 100%; height: 500px">
                </a>
                <h1 class="text">{{ categorie.profession }}</h1>
            </div>
        {% endfor %}
        <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
        <a class="next" onclick="plusSlides(1)">&#10095;</a>
    </div>
    <br>
    <!-- The dots/circles -->
    <div style="text-align:center">
        {% for categorie in categories %}
           <span class="dot" onclick="currentSlide({{ loop.index }})"></span>
        {% endfor %}
    </div>
    <div class="carved advert" style="display: flex; justify-content: space-evenly; margin-top: 50px; padding-left: 0">
        <div class="section">
            <i class="fa fa-building-o fa-3x" aria-hidden="true"></i>
            <p>
                Vous êtes nouveaux dans le quartier?
            </p>
        </div>
        <div class="section">
            <i class="fa fa-long-arrow-right fa-2x" aria-hidden="true" style="margin-top: 10px"></i>
        </div>
        <div class="section">
            <i class="fa fa-exclamation fa-3x" aria-hidden="true"></i>
            <p style="text-align: center">
                Vous avez besoin d'un service
            </p>
        </div>
        <div class="section">
            <i class="fa fa-long-arrow-right fa-2x" aria-hidden="true" style="margin-top: 10px"></i>
        </div>
        <div class="section">
            <i class="fa fa-lightbulb-o fa-3x" aria-hidden="true"></i>
            <p style="text-align: center">
                Vous êtes au bon endroit
            </p>
        </div>
        <div class="section">
            <i class="fa fa-long-arrow-right fa-2x" aria-hidden="true" style="margin-top: 10px"></i>
        </div>
        <div class="section">
            <i class="fa fa-check fa-3x" aria-hidden="true"></i>
            <p style="text-align: center">
                ????????????????????
            </p>
        </div>
    </div>
    <div class="advert-buttons">
        <a href="#" id="embauche">Je veux embaucher</a>
        <a href="#">Je veux travailler</a>
    </div>
{% endblock %}


{% block javascripts %}
    <script src="{{ asset('js/slideShow.js') }}"></script>
{% endblock %}